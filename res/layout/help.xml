  />
<TextView android:text="@string/helpIntegral" 
  android:id="@+id/integText" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content"
  android:textSize="14sp"
  android:layout_below="@+id/integTitle"
  android:textColor="#ffffff"/>
<TextView android:text="@string/keyboard" 
  android:id="@+id/keyTitle" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content"
  android:textSize="22sp"
  android:layout_below="@+id/integText"
  />
<TextView android:text="@string/helpKeyboard" 
  android:id="@+id/keyText" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content"
  android:textSize="14sp"
  android:layout_below="@+id/keyTitle"
  android:textColor="#ffffff"/>
<TextView android:text="@string/miscellaneous" 
  android:id="@+id/miscTitle" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content"
