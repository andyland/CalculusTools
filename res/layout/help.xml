<TextView android:text="@string/graph" 
  android:id="@+id/graphTitle" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content"
  android:textSize="22sp"
  android:layout_below="@+id/calcText"
  />
<TextView android:text="@string/helpGraph" 
  android:id="@+id/graphText" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content"
  android:textSize="14sp"
  android:layout_below="@+id/graphTitle"
  android:textColor="#ffffff"/>
<TextView android:text="@string/derivative" 
  android:id="@+id/derTitle" 
  android:layout_width="fill_parent" 
