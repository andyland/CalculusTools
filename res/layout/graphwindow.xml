<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<ScrollView
  android:id="@+id/windowScroll"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<TextView android:text="X Min:" 
android:id="@+id/TextView01" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"></TextView>
<EditText android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:text="" 
android:layout_toRightOf="@+id/TextView01" 
android:id="@+id/xMinText"></EditText>
<TextView android:layout_height="wrap_content" 
android:text="X Max:" 
android:layout_width="wrap_content" 
android:layout_below="@+id/xMinText"  
android:id="@+id/TextView02"></TextView>
<EditText android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:layout_below="@+id/xMinText" 
android:text="" 
android:layout_toRightOf="@+id/TextView02" 
android:id="@+id/xMaxText"></EditText>
<TextView android:layout_height="wrap_content" 
android:text="Y Min:" 
android:layout_width="wrap_content" 
android:layout_below="@+id/xMaxText"  
android:id="@+id/TextView03"></TextView>
<EditText android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:layout_below="@+id/xMaxText" 
android:text="" 
android:layout_toRightOf="@+id/TextView03" 
android:id="@+id/yMinText"></EditText>
<TextView android:layout_height="wrap_content" 
android:text="Y Max:" 
android:layout_width="wrap_content" 
android:layout_below="@+id/yMinText" 
android:id="@+id/TextView04"></TextView>
<EditText android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:layout_below="@+id/yMinText" 
android:text="" 
android:layout_toRightOf="@+id/TextView04" 
android:id="@+id/yMaxText"></EditText>
<TextView android:layout_height="wrap_content" 
android:text="X Scale:" 
android:layout_width="wrap_content" 
android:layout_below="@+id/yMaxText"  
android:id="@+id/TextView05"></TextView>
<EditText android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:layout_below="@+id/yMaxText" 
android:text="" 
android:layout_toRightOf="@+id/TextView05" 
android:id="@+id/xScaleText"></EditText>
<TextView android:layout_height="wrap_content" 
android:text="Y Scale:" 
android:layout_width="wrap_content" 
android:layout_below="@+id/xScaleText" 
android:id="@+id/TextView06"></TextView>
<EditText android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:layout_below="@+id/xScaleText" 
android:text="" 
android:layout_toRightOf="@+id/TextView06" 
android:id="@+id/yScaleText"/>
<TextView android:layout_height="wrap_content" 
android:text="Start Theta:" 
android:layout_width="wrap_content" 
android:layout_below="@+id/yScaleText" 
android:id="@+id/TextView07"></TextView>
<EditText android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:layout_below="@+id/yScaleText" 
android:text="" 
android:layout_toRightOf="@+id/TextView07" 
android:id="@+id/startTheta"/>
<TextView android:layout_height="wrap_content" 
android:text="End Theta:" 
android:layout_width="wrap_content" 
android:layout_below="@+id/startTheta" 
android:id="@+id/TextView08"/>
<EditText android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:layout_below="@+id/startTheta" 
android:text="" 
android:layout_toRightOf="@+id/TextView08" 
android:id="@+id/endTheta"/>
</RelativeLayout>
</ScrollView>
<Button android:layout_height="wrap_content" 
android:id="@+id/updateButton" 
android:layout_width="fill_parent" 
android:layout_below="@+id/windowScroll" 
android:text="@string/update"></Button>
</RelativeLayout>
